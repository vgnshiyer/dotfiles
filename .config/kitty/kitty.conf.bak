shell /opt/homebrew/bin/fish
editor nvim

background_opacity 1
hide_window_decorations yes
wayland_titlebar_color #101010

# ------ Font ------
font_size 16

# ------ Colorscheme ------
 include one_half_dark.conf
# include gruvbox_dark.conf
# include solarized_dark.conf

# ------ Keybindings ------
map cmt+shift+t new_tab fzf

map ctrl+k neighboring_window up
map ctrl+j neighboring_window down
map ctrl+h neighboring_window left
map ctrl+l neighboring_window right

map cmd+ctrl+up resize_window 0 -2
map cmd+ctrl+down resize_window 0 2
map cmd+ctrl+left resize_window -2 0
map cmd+ctrl+right resize_window 2 0

map cmd+shift+h split_window horizontally
map cmd+shift+v split_window vertically

map cmd+alt+right next_tab
map cmd+alt+left previous_tab

map cmd+1 goto_tab 0
map cmd+2 goto_tab 1
map cmd+3 goto_tab 2
map cmd+4 goto_tab 3
map cmd+5 goto_tab 4
map cmd+6 goto_tab 5
map cmd+7 goto_tab 6
map cmd+8 goto_tab 7
map cmd+9 goto_tab 8
